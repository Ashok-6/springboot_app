package com.pg.payment.feign;





import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;

import com.pg.payment.dto.UserDto;

// Base URL points directly to the user service API
@FeignClient(name = "user-service", url = "http://localhost:8081/api/users")
public interface AdminClient {

    // Do NOT repeat 'users' here; just use /{id}
    @GetMapping("/{id}")
    UserDto getUserById(@PathVariable("id") Long id);
}


